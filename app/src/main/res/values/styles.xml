<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/grey_50</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="TransparentToolbar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/transparent</item>
        <item name="background">@color/transparent</item>
        <item name="colorControlNormal">@color/grey_50</item>
    </style>

    <style name="ToolbarSpinnerTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/amber_400</item>
    </style>
</resources>
